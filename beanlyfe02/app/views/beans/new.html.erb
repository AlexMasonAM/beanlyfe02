<%= form_for @bean do |f| %>
  <%= f.label :name %><%= f.text_field :name %>
  <%= f.label :roast %><%= f.text_field :roast %>
  <%= f.label :origin %><%= f.text_field :origin %>
  <%= f.label :year_roasted %><%= f.text_field :year_roasted %>
  <%= f.label :quantity %><%= f.text_field :quantity %>
